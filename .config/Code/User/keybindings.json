// Place your key bindings in this file to override the defaults
[

// LIParadise navigation
// ============================================================================

// seems that this is not an "override"; it's instead a extension.
{ "key": "alt+left" , "command": "workbench.action.navigateBack"    , "when": "editorTextFocus" },
{ "key": "alt+right", "command": "workbench.action.navigateForward" , "when": "editorTextFocus" },

// Toggle between terminal and editor focus
{ "key": "ctrl+`", "command": "workbench.action.terminal.focus"},
{ "key": "ctrl+`", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"}

// switch terminals
// { "key": "cmd+shift+j", "command": "workbench.action.terminal.focusNext", "when": "terminalFocus" },
// { "key": "cmd+shift+k", "command": "workbench.action.terminal.focusPrevious", "when": "terminalFocus" }

// ============================================================================
// LIParadise navigation end

