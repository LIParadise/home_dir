// Place your key bindings in this file to override the defaults
[
    // vim extension shortcuts override
    {
        "key": "ctrl+f1",
        "command": "toggleVim"
    },
    /* When in insert mode, trigger suggestions */
    {
        "key": "ctrl+n",
        "command": "editor.action.triggerSuggest",
        "when": "vim.mode == 'Insert'"
    },
    /* While suggestions is visible, navigate down with ctrl+n */
    {
        "key": "ctrl+n",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetVisible"
    },
    /* While suggestions is visible, navigate up with ctrl+p (this already works, but adding it for note sake) */
    {
        "key": "ctrl+p",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetVisible"
    }
]