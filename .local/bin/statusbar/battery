#!/usr/bin/env sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "🔋 Battery module" "🔋: discharging
N: not charging
n: stagnant charge
C: charging
F: charged
L: battery very low!
- Text color reflects charge left" ;;
esac

batLs="$(ls /sys/class/power_supply | grep -i bat | tr '\n' ' ')"
batArr=(${batLs})
batArrLen=${#batArr[@]}
capacity=0
str=""
stat=""
acpower=0
color=""

for idx in "${!batArr[@]}"; do
  c=$(cat /sys/class/power_supply/"${batArr[${idx}]}"/capacity) || exit
  stat=$(cat /sys/class/power_supply/"${batArr[${idx}]}"/status)
  [ "${stat}" = "Charging" ] && acpower=1

  str="${str}${idx}:{$(cat /sys/class/power_supply/"${batArr[${idx}]}"/status)= $(echo "${c}" | sed -e 's/$/%/')} "
  capacity=$(expr ${capacity} + ${c})
done

capacity=$(expr ${capacity} / ${batArrLen})
str=$(echo ${str} | sed -e "s/,//;s/Discharging/🔋/;s/Not charging/🛑/;s/Charging/🔌/;s/Unknown/♻️/;s/Full/⚡/;s/ 0*/ /g;s/ :/ /g")

if [ "$capacity" -ge 70 ]; then
	color="#00ff00"
elif [ "$capacity" -ge 50 ]; then
	color="#ffffff"
elif [ "$capacity" -ge 22 ]; then
	color="#ffff00"
else
	color="#ff0000"
	warn="❗"
fi

[ -z $warn ] && warn=" "

[ "${acpower}" = 1 ] && color="#ffffcc"

printf "<span color='%s'>%s%s%s</span>\n" "$color" "${status}" "$warn" "${str} || $(echo "$capacity" | sed -e 's/$/%/')"
