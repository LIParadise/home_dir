#!/usr/bin/env sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "🔋 Battery module" "🔋: discharging
N: not charging
n: stagnant charge
C: charging
F: charged
L: battery very low!
- Text color reflects charge left" ;;
esac

capacity1=$(cat /sys/class/power_supply/"$1"/capacity) || exit
capacity2=$(cat /sys/class/power_supply/"$2"/capacity) || exit
status1=$(cat /sys/class/power_supply/"$1"/status)
status2=$(cat /sys/class/power_supply/"$2"/status)
capacity=$(expr $(expr ${capacity1} + ${capacity2}) / 2)

if [ "$capacity" -ge 70 ]; then
	color="#00ff00"
elif [ "$capacity" -ge 50 ]; then
	color="#ffffff"
elif [ "$capacity" -ge 22 ]; then
	color="#ffff00"
else
	color="#ff0000"
	warn="❗"
fi

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color="#ffffff"

printf "<span color='%s'>%s%s%s</span>\n" "$color" "$(echo "$status" | sed -e "s/,//;s/Discharging/🔋/;s/Not charging/🛑/;s/Charging/🔌/;s/Unknown/♻️/;s/Full/⚡/;s/ 0*/ /g;s/ :/ /g")" "$warn" "0: $(echo "$capacity1" | sed -e 's/$/%/') 1: $(echo "$capacity2" | sed -e 's/$/%/') || $(echo "$capacity" | sed -e 's/$/%/')"
