GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="$(sed 's, release .*$,,g' /etc/system-release)"
GRUB_DEFAULT=saved
GRUB_DISABLE_SUBMENU=true
GRUB_TERMINAL_OUTPUT="console"
GRUB_CMDLINE_LINUX="resume=/dev/mapper/debian_vg-swap rd.lvm.lv=debian_vg/root rd.lvm.lv=debian_vg/swap rhgb quiet i915.i915_enable_rc6=1 i915.i915_enable_fbc=1 nmi_watchdog=0"
GRUB_DISABLE_RECOVERY="true"
GRUB_ENABLE_BLSCFG=true
